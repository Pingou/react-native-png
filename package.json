{
  "name": "react-native-png",
  "version": "1.0.1",
  "description": "Functionality for dynamically creating and modifying PNGs in React Native",
  "main": "index.js",
  "scripts": {
    "prepublish": "yarn run lint && yarn run test",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint --fix ."
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richburke/react-native-png.git"
  },
  "keywords": [
    "png",
    "react",
    "native"
  ],
  "author": "Rich Burke <rich.burke.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/richburke/react-native-png/issues"
  },
  "homepage": "https://github.com/richburke/react-native-png#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.7.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "jest": "^23.6.0",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.3"
  },
  "dependencies": {
    "core-js": "^2.5.7"
  }
}
